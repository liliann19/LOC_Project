<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>

  <link rel="icon" type="image/png" href="/images/gator-icon.png">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/dashboard.css">

  <!-- DataTables Libraries -->
  <script src="//code.jquery.com/jquery-3.7.1.js"></script>
  <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
  <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.2/css/responsive.dataTables.min.css">
  <script src="https://cdn.datatables.net/responsive/3.0.2/js/dataTables.responsive.min.js"></script>
</head>

<body>

<div class="dashboard-wrapper">
  <div class="dashboard-container">

    <!-- Sidebar -->
    <aside class="sidebar">
      <h2>Divisions</h2>

      <ul id="divisionList">
        <% 
          const uniqueDivisions = {};
          data.forEach(row => {
            if (!uniqueDivisions[row.divisionKey]) {
              uniqueDivisions[row.divisionKey] = row;
            }
          });

          Object.keys(uniqueDivisions).forEach(divKey => {
        %>
          <li class="division-item"
              data-key="<%= divKey %>"
              data-name="<%= uniqueDivisions[divKey].divName %>">
            <%= uniqueDivisions[divKey].divName %>
          </li>
        <% }) %>
      </ul>

      <a href="/index" class="home-btn">⬅Division Management</a>
      <a href="/PAI" class="home-btn">⬅PAI Schedule</a>
    </aside>

    <!-- Main content -->
    <main class="dashboard-main">

      <!-- Programs Under Review -->
      <div class="card under-review-card">
        <h3>To Do: Programs currently under review</h3>

        <% if (underReviewPrograms.length === 0) { %>
          <p>No programs currently under review.</p>
        <% } else { %>
          <ul>
            <% underReviewPrograms.forEach(p => { %>
              <li>
                <a href="/editProgram?id=<%= p.id %>" class="program-link">
                  <strong><%= p.academicProgram %></strong>
                </a>
                — <%= p.divName %>
              </li>
            <% }) %>
          </ul>
        <% } %>

        <!-- Year Select -->
        <div>
          <label for="year-select" class="year-label">Select a year:</label>
          <select id="year-select" class="year-dropdown">
            <% const years = ["2022-2023","2023-2024","2024-2025","2025-2026","2026-2027","2027-2028","2028-2029","2029-2030","2030-2031","2031-2032","2032-2033"]; %>
            <% years.forEach(y => { %>
              <option value="<%= y %>" <%= selectedYear === y ? "selected" : "" %>><%= y %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Programs Table -->
      <div class="page-card">
        <h1 class="page-title">Programs</h1>
        <h4>Year Selected:</h4>

        <div class="table-wrapper">
          <table id="dashboard-table" class="display nowrap" style="width:100%;">
            <thead>
              <tr>
                <th>Program</th>
                <th>Dean</th>
                <th>LOC Rep</th>
                <th>Submitted</th>
                <th>Paid</th>
                <th>Edit</th>
                <th hidden>Division</th>
              </tr>
            </thead>

            <tbody>
              <% data.forEach(d => { %>
                <tr data="<%= d.divisionKey %>">
                  <td><%= d.academicProgram %></td>
                  <td><%= d.dean %></td>
                  <td><%= d.locRep %></td>
                  <td><%= d.submitted %></td>
                  <td><%= d.beenPaid %></td>
                  <td>
                    <a href="/editProgram?id=<%= d.id %>">Edit</a>
                  </td>
                  <td hidden><%= d.divName %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Recent Changes -->
      <aside class="activity-card">
        <h2>Recent Changes</h2>

        <ul id="activityFeed">
          <% if (recentChanges.length === 0) { %>
            <li>No recent updates</li>
          <% } else { %>
            <% recentChanges.forEach(change => { %>
              <li>
                <strong><%= change.academicProgram %></strong><br>
                <%= change.divName %> — <%= change.timestamp %>
              </li>
            <% }) %>
          <% } %>
        </ul>
      </aside>

    </main>

  </div> <!-- END dashboard-container -->
</div> <!-- END dashboard-wrapper -->

<script>
document.addEventListener("DOMContentLoaded", function () {

  const myTable = new DataTable('#dashboard-table', {
    responsive: true,
    scrollX: true,
  });

  const divisionItems = document.querySelectorAll(".division-item");

  divisionItems.forEach(function(item) {
    item.addEventListener("click", function() {
      const divName = item.getAttribute("data-name");
      divisionItems.forEach(li => li.classList.remove("active"));
      item.classList.add("active");
      myTable.search(divName).draw();
    });
  });
});

const yearDropdown = document.getElementById("year-select");
yearDropdown.addEventListener("change", () => {
  const selectedYear = yearDropdown.value;
  window.location.href = `/?year=${selectedYear}`;
});
</script>

</body>
</html>
