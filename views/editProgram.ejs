<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Program</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/gator-icon.png">

  <!-- Stylesheet -->
  <link rel="stylesheet" href="/styles/styles.css">

  <!-- JavaScript -->
  <script src="/js/edit_program.js" defer ></script>
</head>

<body>
  <main>
    <h1>Edit Program</h1>

    <!-- Edit Program form  -->
    <form id="edit-form" action="/editProgram/<%= data.id %>" method="POST">

        <fieldset id="editInfo">

        <input type="hidden" name="id" value="<%= data.id %>">

        <label>Division</label>
        <input type="text" name="divName" value="<%= data.divName %>" readonly>


        <label>Academic Program</label>
        <input type="text" name="academicProgram" id="academicProgram" value="<%= data.academicProgram %>">

        <label>Payee(s)</label>
        <input type="text" name="payee" value="<%= data.payee %>">

        <label>Has Been Paid</label>
        <input type="text" name="beenPaid" value="<%= data.beenPaid %>">

        <label>Report Submitted</label>
        <input type="text" name="submitted" value="<%= data.submitted %>">

        <label>Notes</label>
        <textarea name="notes"><%= data.notes %></textarea>

        <label>
          <input type="checkbox" name="underReview" value="yes" 
            <%= data.underReview === 'yes' ? 'checked' : '' %> >
          Under Review
        </label>


        <label>Last Updated</label>
        <input type="text" value="<%= data.timestamp %>" disabled>


                <!-- Form buttons  -->
                <button type="submit" id="save-button">Save</button>
                <a href="/" id="cancel-button">Cancel</a>
      </fieldset>
    </form>
  </main>
</body>
</html>