<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Summary</title>

    <script src="js/LOC_Project.js" defer></script>
    <script src="//code.jquery.com/jquery-3.7.1.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new DataTable('#report-table');
        });
    </script>

    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <main id="summary-main">
    <h1>Summary Page</h1>
    <a href="/">Division Management</a>

    <table id="report-table" class="display">
        <thead>
            <tr>
                <th>Division</th>
                <th>Academic Program</th>
                <th>Division Chair</th>
                <th>Dean</th>
                <th>LOC Rep</th>
                <th>PEN Contact</th>
                <th>Payee(s)</th>
                <th>Has Been Paid (Yes/No)</th>
                <th>Report Submitted(Yes/No)</th>
                <th>Notes</th>
                <th>Date</th>
                <th>Edit</th>
                
                
                
            </tr>
        </thead>
            <tbody>
    <% 
    Object.keys(divisionData).forEach(key => {
        const div = divisionData[key];
        const programs = div.programs || [];
    %>
        <% programs.forEach(program => { %>
            <tr>
                <td><%= div.divName %></td>
                <td><%= program.academicProgram %></td>
                <td><%= div.chair %></td>
                <td><%= div.dean %></td>
                <td><%= div.locRep %></td>
                <td><%= div.penContact %></td>
                <td><%= program.payee %></td>
                <td><%= program.beenPaid %></td>
                <td><%= program.submitted %></td>
                <td><%= program.notes %></td>
                <td><%= div.timestamp%></td>
                <td><a href="/">Edit</a></td>
            </tr>
        <% }); %>
    <% }); %>

            <% 
            // reports 
            reports.forEach(report => { 
            %>
                <tr>
                    <td><%= report.divName %></td>
                    <td><%= report.academicProgram %></td>
                    <td><%= report.chair || 'TBD' %></td>
                    <td><%= report.dean %></td>
                    <td><%= report.locRep %></td>
                    <td><%= report.penContact || 'TBD' %></td>
                    <td><%= report.payee %></td>
                    <td><%= report.beenPaid %></td>
                    <td><%= report.submitted %></td>
                    <td><%= report.notes %></td>
                    <td><%= report.timestamp || '' %></td>
                    <td><a href="/">Edit</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    </main>
</body>
</html>
