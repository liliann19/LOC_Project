<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PAI Year-Program Schedule</title>

  <!-- Stylesheet -->
  <link rel="stylesheet" href="/styles/styles.css">

    <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/gator-icon.png">

  <!-- JavaScript -->
  <script src="js/pai-page.js" defer></script>
</head>

<body>
      <!-- Saving spinner -->
    <div id="savingSpinner" class="spinner hidden">
      <div class="spinner-circle"></div>
      Saving...
    </div>

  <!-- Main PAI page container -->
  <div class="pai-page">
    <h1>Program Assessment and Improvement Schedule</h1>
    <p>Last revised 11/13/2025</p>

    <!-- Buttons -->
    <div class="button-wrapper">
      <!-- Link to return to dashboard -->
      <a href="/" class="back-dashboard">â¬…Back to Dashboard</a>

      <!-- Button to enable editing mode -->
      <button id="editMode">Edit</button>

      <!--  Button to save changes -->
      <button id="saveChanges" style="display:none;">Save</button>

      <!-- Button to cancel changes -->
      <button id="cancelChanges" style="display:none;">Cancel</button>
    </div>

    <!-- Loop through each division -->
    <% divisions.forEach(div=> { %>
      <h2>
        <!-- Division heading -->
        <%= div.divName %>
      </h2>
      <!-- Table of programs for each division -->
      <table>
        <thead>
          <tr>
            <th>Program</th>
            <!-- Loop through each year for column headers -->
            <% years.forEach(y=> { %>
              <th>
                <%= y %>
              </th>
              <% }) %>
          </tr>
        </thead>
        <tbody>
          <!-- Loop through each program in the division -->
          <% div.programs.forEach(p=> { %>
            <tr>
              <!-- Program name -->
              <td class="program-name">
                <%= p.academicProgram %>
              </td>
              <!-- Checkboxes for each year -->
              <% years.forEach(y=> { %>
                <td>
                  <input type="checkbox" class="ur-box" data-program="<%= p.id %>" data-year="<%= y %>" <% if
                    (p.underReviewByYear[y]==="yes" ) { %> checked <% } %>
                    disabled>
                </td>
                <% }) %>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <% }) %>
  </div>

  <%# Confirmation popup %>
  <div id="popup" class="popup hidden">
    <span id="popupMessage"></span>
  </div>

</body>
</html>